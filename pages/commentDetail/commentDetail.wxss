/* pages/commentDetail/commentDetail.wxss */
.commentArea{
  width: 750rpx;
  display: flex;
  flex-direction:column;
}
.comment,.reply{
  margin-top: 5rpx;
  width: 750rpx;
  background-color: white;
}
.comment{
  margin-bottom: 20rpx;
}
.comment2{
  width: 700rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}
.floor,.date,.iconArea{
  color: #aeaaaa
}
.avatarArea{
  width: 115rpx;
}
.avatar{
  width: 90rpx;
  height: 90rpx;
  margin-right: 15rpx;
  border-radius: 100%
}
.commentRightArea{
  display: flex;
  flex-direction: column;
  width: 585rpx;
}
.userArea{
  height: 60rpx;
  width: 100%;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
.userName,.delete{
  color: #4395dc
}
.commentContentArea{
  width: 100%;
}
.dealArea{
  margin-top:20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
}
.date,.delete,.zanNum{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.dealRight,.dealLeft{
  display: flex;
  flex-direction: row;
}
.iconArea{
  height: 36rpx;
  display: flex;
  flex-direction: row;
  justify-content:flex-end;
  font-size: 30rpx;
}
.Icon{
  width: 36rpx;
  height: 36rpx;
  margin-left: 15rpx;
}
.replyArea{
  width: 100%;
  margin-top: 20rpx;
}
.delete{
  margin-left: 25rpx;
}
.reply{
  display: flex;
  flex-direction: row;
}
.hover{
  background-color:#cccccc;
}
.header{
  width: 750rpx;
  height: 70rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.replyNum{
  margin-left: 25rpx;
}
.inputArea,.bottomArea{
  width: 100%;
}
.bottomArea,.button{
  display: flex;
  flex-direction: row;
  justify-content: center
}
.inputTips{
  position: fixed;
  font-size: 36rpx;
  background-color: white;
}
.tipsArea{
  width: 100%;
  height: 80rpx;
}
.inputArea,.tipsArea,.emotionArea,.buttonArea,.textTips{
  display: flex;
  flex-direction: column;
  justify-content: center
}
.inputUser{
  margin-left: 30rpx;
}
.input,.bottomArea{
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  height: 100rpx;
  width: 100%;
}
.emotionArea,.buttonArea{
  width: 125rpx;
  height: 100rpx;
}
.emotion{
  height: 65rpx;
  width: 65rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.button{
  width: 100%
}
.textArea{
  width: 690rpx;
  margin:10rpx 30rpx 10rpx 30rpx;
}
.textContain{
  width: 500rpx;
}
.textTips{
  width: 100%;
  height: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap
}
.focusInputArea{
  width: 100%;
}