/* pages/commentPage/commentPage.wxss */

.header {
  width: 750rpx;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.header-font {
  margin-left: 10px;
  font-size: 34rpx;
}

.bottom-panel {
  /* background-color: black; */
  /* height: 200rpx; */
  padding: 50rpx;
  margin-bottom: 200rpx;
}

.commentArea {
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

.comment {
  width: 750rpx;
  background-color: white;
  margin-top: 8rpx;
}

.comment2 {
  width: 700rpx;
  margin: 25rpx;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}

.floor, .date, .iconArea, .header, .inputUser {
  color: #aeaaaa;
  font-size: 28rpx;
}

.avatarArea {
  width: 105rpx;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 15rpx;
  border-radius: 100%;
}

.commentRightArea {
  display: flex;
  flex-direction: column;
  width: 595rpx;
}

.userArea {
  height: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.userName, .delete {
  color: #4395dc;
}

.delete {
  margin-left: 25rpx;
}

.commentContentArea {
  width: 100%;
}

.dealArea {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
}

.date, .delete, .zanNum {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.dealRight, .dealLeft {
  display: flex;
  flex-direction: row;
}

.iconArea {
  height: 36rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 30rpx;
}

.Icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 15rpx;
}

.replyArea {
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  background-color: #f4f4f4;
  width: 100%;
}

.reply {
  display: flex;
  flex-direction: row;
  margin-bottom: 5rpx;
}

.hide {
  display: -webkit-box;
}

.show {
  display: block;
}

.hover {
  background-color: #ccc;
}

.inputArea, .bottomArea {
  width: 100%;
}

.bottomArea, .button {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.inputTips {
  bottom: 0rpx;
  /* padding-bottom: 0%; */
  position: fixed;
  font-size: 35rpx;
  background-color: white;
}

.tipsArea {
  width: 100%;
  height: 80rpx;
}

.inputArea, .tipsArea, .emotionArea, .buttonArea, .textTips {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.inputUser {
  margin-left: 30rpx;
}

.input, .bottomArea {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  height: 100rpx;
  width: 100%;
}

.emotionArea, .buttonArea {
  width: 125rpx;
  height: 100rpx;
}

.emotion {
  height: 60rpx;
  width: 60rpx;
  margin-left: 50rpx;
  margin-right: 40rpx;
}

.button {
  width: 100%;
}

.textArea {
  width: 690rpx;
  margin: 10rpx 30rpx 10rpx 30rpx;
}

.textContain {
  width: 500rpx;
}

.textTips {
  width: 100%;
  height: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.focusInputArea {
  width: 100%;
}
